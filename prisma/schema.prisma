generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ensure this matches your cloud provider
  url      = env("DATABASE_URL")
}

model Teacher {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String
  subject      String
  image        String
  location     String
  hourlyRate   Int
  isVerified   Boolean   @default(false)
  
  // Onboarding & Ranking
  hasOnboarded Boolean   @default(false)
  rating       Float     @default(5.0)
  sales        Int       @default(0)
  
  // Ads & Plans
  plan         String    @default("free")
  planExpires  DateTime?
  ranking      Int       @default(0)

  // Relations
  bookings     Booking[]
  courses      Course[]
  reviews      Review[]
  conversations Conversation[] // <--- ADDED THIS
  resetToken       String?
  resetTokenExpiry DateTime?
}

model Student {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  image     String?
  
  // Relations
  bookings  Booking[]
  reviews   Review[]
  conversations Conversation[] // <--- ADDED THIS
  resetToken       String?
  resetTokenExpiry DateTime?
}

model Course {
  id          String    @id @default(uuid())
  title       String
  description String
  price       Int
  startDate   DateTime
  endDate     DateTime
  schedule    String    
  createdAt   DateTime  @default(now())

  teacherId   String
  teacher     Teacher   @relation(fields: [teacherId], references: [id])
  bookings    Booking[]
}

model Booking {
  id          String   @id @default(uuid())
  amount      Int
  reference   String
  status      String   @default("success") 
  createdAt   DateTime @default(now())
  
  type        String   @default("paid")
  scheduledAt DateTime? 

  teacherId   String
  teacher     Teacher  @relation(fields: [teacherId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int      
  comment   String
  createdAt DateTime @default(now())

  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])

  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
}

// --- CHAT SYSTEM ---
model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  teacherId String
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  
  studentId String
  student   Student   @relation(fields: [studentId], references: [id])

  messages  Message[]

  @@unique([teacherId, studentId])
}

model Message {
  id             String       @id @default(uuid())
  content        String
  senderId       String       
  senderType     String       // "teacher" or "student"
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

// --- ADMIN SYSTEM ---
model Page {
  id        String   @id @default(uuid())
  slug      String   @unique 
  title     String
  content   String 
  updatedAt DateTime @updatedAt
}

model Package {
  id          String   @id @default(uuid())
  name        String  
  price       Int
  description String
  features    String 
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}
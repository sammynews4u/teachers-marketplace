generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String
  subject      String
  image        String
  location     String
  hourlyRate   Int
  isVerified   Boolean   @default(false)
  hasOnboarded Boolean   @default(false)
  
  // NEW FIELDS FOR PACKAGES
  plan         String    @default("free") // "free", "bronze", "silver", "gold"
  planExpires  DateTime? // When the ad expires
  ranking      Int       @default(0)      // Internal score for sorting

  bookings     Booking[]
  courses      Course[]
}

model Student {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  image     String?   // <--- NEW FIELD
  bookings  Booking[]
}

model Booking {
  id          String   @id @default(uuid())
  amount      Int
  reference   String
  status      String   @default("success") 
  type        String   @default("paid") 
  scheduledAt DateTime?
  createdAt   DateTime @default(now())

  teacherId   String
  teacher     Teacher  @relation(fields: [teacherId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  
  // NEW: Optional link to a specific course
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id])
}
model Page {
  id        String   @id @default(uuid())
  slug      String   @unique  // e.g. "about-us", "terms"
  title     String
  content   String   // The text/html of the page
  updatedAt DateTime @updatedAt
}

model Package {
  id          String   @id @default(uuid())
  name        String   // e.g. "Gold Plan"
  price       Int
  description String
  features    String   // Comma separated list of features
}
// 2. Add Course Model (NEW)
model Course {
  id          String    @id @default(uuid())
  title       String
  description String
  price       Int
  startDate   DateTime
  endDate     DateTime
  schedule    String    // e.g. "Mon/Wed 4:00 PM"
  createdAt   DateTime  @default(now())

  teacherId   String
  teacher     Teacher   @relation(fields: [teacherId], references: [id])
  bookings    Booking[]
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ensure this matches your cloud provider (Render/Railway)
  url      = env("DATABASE_URL")
}

model Teacher {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String
  subject      String
  image        String
  location     String
  hourlyRate   Int
  isVerified   Boolean   @default(false)
  reviews      Review[]
  
  // Onboarding & Ranking
  hasOnboarded Boolean   @default(false)
  rating       Float     @default(5.0)
  sales        Int       @default(0)
  
  // Ads & Plans
  plan         String    @default("free") // "bronze", "silver", "gold"
  planExpires  DateTime?
  ranking      Int       @default(0)

  bookings     Booking[]
  courses      Course[]
}

model Student {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  image     String?
  bookings  Booking[]
   reviews   Review[]
}

model Course {
  id           String    @id @default(uuid())
  title        String
  description  String
  price        Int
  startDate    DateTime
  endDate      DateTime
  schedule     String    
  
  // --- NEW FIELD ---
  classroomUrl String?   // Stores the Google Classroom Invite Link
  
  createdAt    DateTime  @default(now())
  teacherId    String
  teacher      Teacher   @relation(fields: [teacherId], references: [id])
  bookings     Booking[]
}

model Booking {
  id          String   @id @default(uuid())
  amount      Int
  reference   String
  status      String   @default("success") 
  createdAt   DateTime @default(now())
  
  // Booking Type
  type        String   @default("paid") // "paid", "trial", "course"
  scheduledAt DateTime? 

  // Relations
  teacherId   String
  teacher     Teacher  @relation(fields: [teacherId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id])
}

// Admin Stuff
model Page {
  id        String   @id @default(uuid())
  slug      String   @unique 
  title     String
  content   String 
  updatedAt DateTime @updatedAt
}

model Package {
  id          String   @id @default(uuid())
  name        String  
  price       Int
  description String
  features    String 
}
model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}

// 3. Add Review Model (NEW)
model Review {
  id        String   @id @default(uuid())
  rating    Int      // 1 to 5
  comment   String
  createdAt DateTime @default(now())

  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])

  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
}

model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  teacherId String
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  
  studentId String
  student   Student   @relation(fields: [studentId], references: [id])

  messages  Message[]

  // Ensure unique conversation per pair
  @@unique([teacherId, studentId])
}

model Message {
  id             String       @id @default(uuid())
  content        String
  senderId       String       // ID of who sent it
  senderType     String       // "teacher" or "student"
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}
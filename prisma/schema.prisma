generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ensure this is postgresql for Vercel/Render
  url      = env("DATABASE_URL")
}

// --- USERS ---

model Teacher {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String
  subject      String
  image        String
  location     String
  hourlyRate   Int
  isVerified   Boolean   @default(false)
  
  // Onboarding & Stats
  hasOnboarded Boolean   @default(false)
  rating       Float     @default(5.0)
  sales        Int       @default(0)
  
  // Ads & Plans
  plan         String    @default("free") // "free", "bronze", "silver", "gold"
  planExpires  DateTime?
  ranking      Int       @default(0)

  // Wallet & Bank Details
  bankName      String?
  accountNumber String?
  accountName   String?
  
  // Admin Control
  isSuspended   Boolean   @default(false)
  resetToken    String?
  resetTokenExpiry DateTime?

  // Relations
  bookings      Booking[]
  courses       Course[]
  reviews       Review[]
  conversations Conversation[]
  payouts       Payout[]
}

model Student {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  image         String?
  
  // Admin Control
  isSuspended      Boolean   @default(false)
  resetToken       String?
  resetTokenExpiry DateTime?

  // Relations
  bookings      Booking[]
  reviews       Review[]
  conversations Conversation[]
  progress      UserProgress[] // <--- LMS Progress
}

// --- LMS & CONTENT ---

model Course {
  id           String    @id @default(uuid())
  title        String
  description  String
  price        Int
  startDate    DateTime
  endDate      DateTime
  schedule     String    
  classroomUrl String?   
  image        String?
  published    Boolean   @default(false)
  createdAt    DateTime  @default(now())

  // --- NEW LMS FIELDS ---
  language     String    @default("English") // e.g., French, Spanish
  level        String    @default("Beginner") // Beginner, Intermediate, Advanced
  outcomes     String?   // "Speak fluently, Master Grammar" (Comma separated)
  requirements String?   // "Laptop, Basic knowledge"
  
  teacherId    String
  teacher      Teacher   @relation(fields: [teacherId], references: [id])
  bookings     Booking[]
  
  // LMS Structure
  modules      Module[]
}

model Module {
  id        String   @id @default(uuid())
  title     String
  order     Int      
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons   Lesson[]
}

model Lesson {
  id          String   @id @default(uuid())
  title       String
  description String?
  videoUrl    String?  
  content     String?  
  order       Int
  isFree      Boolean  @default(false) 
  
  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  resources   Resource[]
  userProgress UserProgress[]
}

model Resource {
  id        String   @id @default(uuid())
  name      String
  url       String   
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model UserProgress {
  id        String   @id @default(uuid())
  studentId String
  lessonId  String
  isCompleted Boolean @default(false)

  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, lessonId])
}

// --- COMMERCE ---

model Booking {
  id          String   @id @default(uuid())
  amount      Int
  reference   String
  status      String   @default("success") 
  createdAt   DateTime @default(now())
  
  // Type: "paid" (hourly), "trial" (free), "course" (cohort)
  type        String   @default("paid") 
  scheduledAt DateTime? 
  
  // Admin Actions
  isRefunded  Boolean   @default(false)

  teacherId   String
  teacher     Teacher  @relation(fields: [teacherId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id])
}

model Payout {
  id            String   @id @default(uuid())
  amount        Int
  status        String   @default("pending") // pending, paid, rejected
  bankDetails   String   
  createdAt     DateTime @default(now())

  teacherId     String
  teacher       Teacher  @relation(fields: [teacherId], references: [id])
}

// --- SOCIAL ---

model Review {
  id        String   @id @default(uuid())
  rating    Int      
  comment   String
  createdAt DateTime @default(now())

  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
}

model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  teacherId String
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  studentId String
  student   Student   @relation(fields: [studentId], references: [id])

  messages  Message[]

  @@unique([teacherId, studentId])
}

model Message {
  id             String       @id @default(uuid())
  content        String
  senderId       String       
  senderType     String       // "teacher" or "student"
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

// --- ADMIN SYSTEM ---

model SystemSettings {
  id             String  @id @default(uuid())
  commissionRate Int     @default(10)
  supportEmail   String  @default("support@teachersb.com")
  maintenanceMode Boolean @default(false)
}

model Page {
  id        String   @id @default(uuid())
  slug      String   @unique 
  title     String
  content   String 
  updatedAt DateTime @updatedAt
}

model Package {
  id          String   @id @default(uuid())
  name        String  
  price       Int
  description String
  features    String 
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}
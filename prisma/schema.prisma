generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ensure this matches your cloud provider (Render/Railway)
  url      = env("DATABASE_URL")
}

model Teacher {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String
  subject      String
  image        String
  location     String
  hourlyRate   Int
  isVerified   Boolean   @default(false)
  
  // Onboarding & Ranking
  hasOnboarded Boolean   @default(false)
  rating       Float     @default(5.0)
  sales        Int       @default(0)
  
  // Ads & Plans
  plan         String    @default("free") // "bronze", "silver", "gold"
  planExpires  DateTime?
  ranking      Int       @default(0)

  bookings     Booking[]
  courses      Course[]
}

model Student {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  image     String?
  bookings  Booking[]
}

model Course {
  id          String    @id @default(uuid())
  title       String
  description String
  price       Int
  startDate   DateTime
  endDate     DateTime
  schedule    String    
  createdAt   DateTime  @default(now())

  teacherId   String
  teacher     Teacher   @relation(fields: [teacherId], references: [id])
  bookings    Booking[]
}

model Booking {
  id          String   @id @default(uuid())
  amount      Int
  reference   String
  status      String   @default("success") 
  createdAt   DateTime @default(now())
  
  // Booking Type
  type        String   @default("paid") // "paid", "trial", "course"
  scheduledAt DateTime? 

  // Relations
  teacherId   String
  teacher     Teacher  @relation(fields: [teacherId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id])
}

// Admin Stuff
model Page {
  id        String   @id @default(uuid())
  slug      String   @unique 
  title     String
  content   String 
  updatedAt DateTime @updatedAt
}

model Package {
  id          String   @id @default(uuid())
  name        String  
  price       Int
  description String
  features    String 
}
model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}